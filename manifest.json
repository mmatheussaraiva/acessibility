{
    "manifest_version": 3,
    "name": "Accessibility Helper",
    "version": "1.0",
    "description": "Extensão de acessibilidade para aumentar/diminuir fonte, leitura de texto e tradução para Libras.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "activeTab",
      "scripting",
      "tts" 
    ]
  }
  